<assembly>
	<id>bin</id>
	<formats>
		<format>tar.gz</format>
		<format>tar.bz2</format>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<!-- This appears not to preserve the custom jar file names, instead
	it adds back the version number that we don't want.  Using <files> instead.
	<moduleSets>
		<moduleSet>
			<includes>
				<include>org.apache.uima:uimaj-core</include>
				<include>org.apache.uima:uimaj-cpe</include>
				<include>org.apache.uima:uimaj-examples</include>
				<include>org.apache.uima:uimaj-tools</include>
				<include>org.apache.uima:uimaj-adapter-vinci</include>
				<include>org.apache.uima:jVinci</include>
			</includes>
			<binaries>
				<outputDirectory>lib</outputDirectory>
				<includeDependencies>false</includeDependencies>
				<unpack>false</unpack>
				<outputFileNameMapping>
					${project.build.finalName}.${extension}</outputFileNameMapping>
			</binaries>
		</moduleSet>
	</moduleSets>
 -->	
	
	<fileSets>
		<fileSet>
			<directory>../uimaj-distr/src/main/scripts</directory>
			<outputDirectory>bin</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../uimaj-distr/src/main/properties</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>../uimaj-ep-configurator/target</directory>
			<includes>
				<include>*.zip</include>
			</includes>
			<outputDirectory>/eclipsePlugins</outputDirectory>
		</fileSet>		
		<fileSet>
			<directory>../uimaj-ep-debug/target</directory>
			<includes>
				<include>*.zip</include>
			</includes>
			<outputDirectory>/eclipsePlugins</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../uimaj-ep-jcasgen/target</directory>
			<includes>
				<include>*.zip</include>
			</includes>
			<outputDirectory>/eclipsePlugins</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../uimaj-ep-pear-packager/target</directory>
			<includes>
				<include>*.zip</include>
			</includes>
			<outputDirectory>/eclipsePlugins</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../uimaj-ep-runtime/target</directory>
			<includes>
				<include>*.zip</include>
			</includes>
			<outputDirectory>/eclipsePlugins</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>../uimaj-core/target/uima-core.jar</source>
			<outputDirectory>/lib</outputDirectory>
		</file>
		<file>
			<source>../uimaj-cpe/target/uima-cpe.jar</source>
			<outputDirectory>/lib</outputDirectory>
		</file>
		<file>
			<source>../uimaj-examples/target/uima-examples.jar</source>
			<outputDirectory>/lib</outputDirectory>
		</file>
		<file>
			<source>../uimaj-tools/target/uima-tools.jar</source>
			<outputDirectory>/lib</outputDirectory>
		</file>
		<file>
			<source>
				../uimaj-adapter-vinci/target/uima-adapter-vinci.jar</source>
			<outputDirectory>/lib</outputDirectory>
		</file>
		<file>
			<source>
				../uimaj-adapter-soap/target/uima-adapter-soap.jar</source>
			<outputDirectory>/lib</outputDirectory>
		</file>
		<file>
			<source>../jVinci/target/jVinci.jar</source>
			<outputDirectory>/lib</outputDirectory>
		</file>
	</files>
</assembly>